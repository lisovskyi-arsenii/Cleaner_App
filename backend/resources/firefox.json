{
  "id": "firefox",
  "name": "Mozilla Firefox",
  "description": "Clean Firefox profile caches",
  "running": false,
  "detect": {
    "type": "dir",
    "paths": [
      "%AppData%\\Mozilla\\Firefox\\Profiles",
      "%APPDATA%\\Mozilla\\Firefox\\Profiles"
    ],
    "registry": [
      {
        "key": "HKLM\\SOFTWARE\\Mozilla\\Mozilla Firefox",
        "os": ["windows"]
      }
    ]
  },
  "options": [
    {
      "id": "cache2",
      "label": "Cache2",
      "description": "Firefox cache2 directory in all profiles",
      "actions": [
        {
          "command": "delete",
          "search": "glob",
          "path": "%AppData%\\Mozilla\\Firefox\\Profiles\\*\\cache2\\*",
          "os": ["windows"]
        }
      ]
    },
    {
      "id": "startup_cache",
      "label": "Startup Cache",
      "description": "Firefox startup cache",
      "actions": [
        {
          "command": "delete",
          "search": "glob",
          "path": "%AppData%\\Mozilla\\Firefox\\Profiles\\*\\startupCache\\*",
          "os": ["windows"]
        }
      ]
    }
  ]
}
