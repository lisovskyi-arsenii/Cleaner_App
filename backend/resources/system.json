{
  "id": "windows_system",
  "name": "Windows System",
  "description": "System cleanup tasks (safe subset)",
  "running": false,
  "detect": {
    "type": "always",
    "paths": [],
    "registry": []
  },
  "options": [
    {
      "id": "user_temp",
      "label": "User Temp",
      "description": "User TEMP directory",
      "actions": [
        {
          "command": "delete",
          "search": "walk.files",
          "path": "%TEMP%\\*",
          "os": ["windows"]
        }
      ]
    },
    {
      "id": "prefetch",
      "label": "Prefetch",
      "description": "Windows Prefetch files",
      "warning": "Deleting Prefetch is usually unnecessary on modern Windows.",
      "actions": [
        {
          "command": "delete",
          "search": "walk.files",
          "path": "C:\\\\Windows\\\\Prefetch\\\\*",
          "os": ["windows"]
        }
      ]
    },
    {
      "id": "windows_temp",
      "label": "Windows Temp",
      "description": "C:\\Windows\\Temp",
      "actions": [
        {
          "command": "delete",
          "search": "walk.files",
          "path": "C:\\\\Windows\\\\Temp\\\\*",
          "os": ["windows"]
        }
      ]
    }
  ]
}
