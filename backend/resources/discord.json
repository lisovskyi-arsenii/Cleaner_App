{
  "id": "discord",
  "name": "Discord",
  "description": "Voice and text chat",
  "icon": "ðŸ’¬",
  "detection": {
    "paths": [
      "%LocalAppData%/Discord",
      "~/.config/discord",
      "/Applications/Discord.app"
    ]
  },
  "options": [
    {
      "id": "cache",
      "label": "Cache",
      "description": "Delete Discord cache",
      "actions": [
        {
          "command": "delete",
          "search": "walk.all",
          "path": "%AppData%/discord/Cache",
          "os": ["windows"]
        },
        {
          "command": "delete",
          "search": "walk.all",
          "path": "%AppData%/discord/Code Cache",
          "os": ["windows"]
        },
        {
          "command": "delete",
          "search": "walk.all",
          "path": "~/.config/discord/Cache",
          "os": ["linux"]
        }
      ]
    },
    {
      "id": "logs",
      "label": "Logs",
      "description": "Delete log files",
      "actions": [
        {
          "command": "delete",
          "search": "walk.files",
          "path": "%AppData%/discord/logs",
          "os": ["windows"]
        }
      ]
    }
  ]
}
